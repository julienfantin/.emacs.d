(require 'use-package)

;;; Third-party

(use-package helpful
  :straight t
  :bind
  (("C-h f" . helpful-callable)
   ("C-h v" . helpful-variable)
   ("C-h k" . helpful-key)
   ("C-h ." . helpful-at-point))
  :hook ((helpful-mode . visual-line-mode)))

(use-package link-hint
  :straight t
  :bind
  ("C-c o" . link-hint-open-link))

